<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/seznam"
        android:layout_width="181dp"
        android:layout_height="51dp"
        android:layout_marginBottom="44dp"

        android:drawableTop="@drawable/list"
        app:layout_constraintBottom_toTopOf="@+id/nastavitve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nastavitve"
        android:layout_width="181dp"
        android:layout_height="51dp"
        android:layout_marginBottom="40dp"

        android:drawableTop="@drawable/nastavitve"
        app:layout_constraintBottom_toTopOf="@+id/buttonrandom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="95dp"

        android:layout_height="91dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/seznam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/slika_logo"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/buttonrandom"
        android:layout_width="181dp"
        android:layout_height="52dp"
        android:layout_marginBottom="40dp"
        android:text="random"
        app:layout_constraintBottom_toTopOf="@+id/kategorije"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/kategorije"
        android:layout_width="181dp"
        android:layout_height="52dp"
        android:layout_marginBottom="156dp"
        android:text="Vsi recepti"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>